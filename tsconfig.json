{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  /* Path Aliases */
  "baseUrl": ".",
  "paths": {
    "~/*": ["./src/*"]
  },
  "files": ["./src/index.ts"],
  "exclude": ["node_modules"]
}